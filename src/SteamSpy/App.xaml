<framework:BindableApplication x:Class="ThunderHawk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ThunderHawk"
             xmlns:framework="clr-namespace:Framework.WPF;assembly=Framework.WPF">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ToastNotifications.Messages;component/Themes/Default.xaml" />
                <ResourceDictionary Source="Styles/Colors.xaml" />
                <ResourceDictionary Source="Styles/WindowStyle.xaml" />
                <ResourceDictionary Source="Styles/SettingsWindowStyle.xaml" />
                <ResourceDictionary Source="Styles/AuthorizationWindowStyle.xaml" />
                <ResourceDictionary Source="Styles/RegistrationWindowStyle.xaml" />
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Styles/TextStyles.xaml" />
                <ResourceDictionary Source="Styles/CheckBoxStyles.xaml" />
                <ResourceDictionary x:Name="Language" Source="Resources/Language/Russian.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</framework:BindableApplication>
