                                    <DropShadowBitmapEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="1"
                                                            Softness="2" />
                                </Border.BitmapEffect>
                                <Grid HorizontalAlignment="Stretch">
                                    <TextBox Style="{DynamicResource PlayerNameStyleRight}" VerticalAlignment="Top"
                                             framework:WPFBinder.Frame="Player6.Name" />
                                    <TextBox Style="{DynamicResource PlayerRatingStyleRight}" VerticalAlignment="Top"
