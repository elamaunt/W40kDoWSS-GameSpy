                                           framework:WPFBinder.Frame="Player6.Race" />
                                </Grid>
                            </Border>
                            <Border BorderThickness="1" BorderBrush="#33FFFFFF" CornerRadius="8,8,3,3"
                                    Padding="0 8 0 0"
                                    Margin="2 2 2 2"
                                    framework:WPFBinder.Frame="Player7.LoadBackground">

                                <Border.BitmapEffect>
                                    <DropShadowBitmapEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="1"
                                                            Softness="2" />
                                </Border.BitmapEffect>
                                <Grid HorizontalAlignment="Stretch">
                                    <TextBox Style="{DynamicResource PlayerNameStyleRight}" VerticalAlignment="Top"
                                             framework:WPFBinder.Frame="Player7.Name" />
                                    <TextBox Style="{DynamicResource PlayerRatingStyleRight}" VerticalAlignment="Top"
                                             framework:WPFBinder.Frame="Player7.Rating" />
                                    <Image Margin="0 0 8 0" Width="40" Height="40" VerticalAlignment="Top"
                                           HorizontalAlignment="Right" RenderOptions.BitmapScalingMode="HighQuality"
                                           framework:WPFBinder.Frame="Player7.Race" />
                                </Grid>
                            </Border>
                            <!--<Grid HorizontalAlignment="Stretch">
                        <TextBox x:Name="Player6" Style="{DynamicResource PlayerNameStyle}" VerticalAlignment="Top"
                                 framework:WPFBinder.Frame="Player6.Name" />
                        <TextBox Style="{DynamicResource PlayerRatingStyle}" VerticalAlignment="Top"
                                 framework:WPFBinder.Frame="Player6.Rating" />
                        <Image Margin="8 8 0 0" Width="40" Height="40" VerticalAlignment="Top"
                               HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality"
                               framework:WPFBinder.Frame="Player6.Race" />
                    </Grid>

                    <Grid HorizontalAlignment="Stretch">
                        <TextBox x:Name="Player7" Style="{DynamicResource PlayerNameStyle}" VerticalAlignment="Top"
                                 framework:WPFBinder.Frame="Player7.Name" />
                        <TextBox Style="{DynamicResource PlayerRatingStyle}" VerticalAlignment="Top"
                                 framework:WPFBinder.Frame="Player7.Rating" />
                        <Image Margin="8 8 0 0" Width="40" Height="40" VerticalAlignment="Top"
                               HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality"
                               framework:WPFBinder.Frame="Player7.Race" />
