                        </StackPanel>

                        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10 20 10 0">
                            <Image Name="Map" framework:WPFBinder.Frame="Map"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Width="120" Height="120" VerticalAlignment="Top" HorizontalAlignment="Center" />
                        </Grid>

                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                            <Border BorderThickness="1" BorderBrush="#33FFFFFF" CornerRadius="8,8,3,3"
                                    Padding="0 8 0 0"
                                    Margin="2 2 2 2"
                                    framework:WPFBinder.Frame="Player4.LoadBackground">
                                <Border.BitmapEffect>
                                    <DropShadowBitmapEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="1"
                                                            Softness="2" />
                                </Border.BitmapEffect>
                                <Grid HorizontalAlignment="Stretch">
                                    <TextBox Style="{DynamicResource PlayerNameStyleRight}" VerticalAlignment="Top"
                                             framework:WPFBinder.Frame="Player4.Name" />
                                    <TextBox Style="{DynamicResource PlayerRatingStyleRight}" VerticalAlignment="Top"
                                             framework:WPFBinder.Frame="Player4.Rating" />
                                    <Image Margin="0 0 8 0" Width="40" Height="40" VerticalAlignment="Top"
                                           HorizontalAlignment="Right" RenderOptions.BitmapScalingMode="HighQuality"
                                           framework:WPFBinder.Frame="Player4.Race" />
                                </Grid>
                            </Border>
                            <Border BorderThickness="1" BorderBrush="#33FFFFFF" CornerRadius="8,8,3,3"
                                    Padding="0 8 0 0"
                                    Margin="2 2 2 2"
                                    framework:WPFBinder.Frame="Player5.LoadBackground">
                                <Border.BitmapEffect>
                                    <DropShadowBitmapEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="1"
                                                            Softness="2" />
                                </Border.BitmapEffect>
                                <Grid HorizontalAlignment="Stretch">
