<framework:BindableControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:framework="clr-namespace:Framework.WPF;assembly=Framework.WPF"
             ClipToBounds="False"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="400">

    <Border BorderBrush="White" BorderThickness="0 1 0 1">
        <DockPanel LastChildFill="False">
            <TextBlock DockPanel.Dock="Left" framework:WPFBinder.Frame="Name" Style="{DynamicResource BigTextStyle}"/>
            <TextBlock DockPanel.Dock="Left" Margin="5 0 0 0" TextWrapping="Wrap"
                       framework:WPFBinder.Frame="Description" Style="{DynamicResource FreeTextStyle}"/>
            <TextBlock DockPanel.Dock="Right">
                <Hyperlink Style="{DynamicResource LinkStyle}">
                    <TextBlock framework:WPFBinder.Frame="ApplyText"></TextBlock>
                </Hyperlink>
            </TextBlock>
        </DockPanel>
    </Border>

</framework:BindableControl>