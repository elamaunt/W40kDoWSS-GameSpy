<framework:BindableWindow x:Class="ThunderHawk.ErrorNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:framework="clr-namespace:Framework.WPF;assembly=Framework.WPF"
        xmlns:core="clr-namespace:ThunderHawk.Core;assembly=ThunderHawk.Core"
        xmlns:local="clr-namespace:ThunderHawk"
        mc:Ignorable="d"
        Height="127"
        Title="Notification"
        Width="349">
    <StackPanel Orientation="Vertical">
        <TextBlock framework:WPFBinder.Frame="Message"
                   Margin="12,12,12,12"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                           FontWeight="Bold"
                           TextWrapping="Wrap" 
                           FontSize="17"
                   Foreground="Black">
        </TextBlock>
    </StackPanel>
</framework:BindableWindow>
