<framework:BindableWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:framework="clr-namespace:Framework.WPF;assembly=Framework.WPF"
        TextOptions.TextRenderingMode="Auto"
        TextOptions.TextFormattingMode="Ideal"
        RenderOptions.ClearTypeHint="Auto"
        mc:Ignorable="d"
        Title="Настройки" Height="340" Width="400" Style="{DynamicResource SettingsWindowStyle}">
    <Grid Margin="16 16 16 16">
        <StackPanel Orientation="Vertical">
            
            <CheckBox Margin="5 0 0 0" VerticalAlignment="Top" IsThreeState="False" framework:WPFBinder.Frame="ThunderHawkModAutoSwitch" Style="{DynamicResource SettingsCheckBoxStyle}"/>

            <Label  Margin="5 10 0 0"  Content="123" Foreground="White" framework:WPFBinder.Frame="GamePath"/>
            <Button Margin="5 0 0 0"  Width="120" Height="22" Content="Сменить путь к игре" Foreground="White" framework:WPFBinder.Frame="ChangeGamePath" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>


</framework:BindableWindow>
