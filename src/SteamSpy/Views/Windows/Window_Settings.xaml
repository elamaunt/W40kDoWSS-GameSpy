<framework:BindableWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:framework="clr-namespace:Framework.WPF;assembly=Framework.WPF"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="140" Width="280" Style="{DynamicResource SettingsWindowStyle}">
    <Grid Margin="5, 5, 5, 5">
        <CheckBox Margin="5 0 0 0" VerticalAlignment="Top" IsThreeState="False" IsChecked="{Binding DisableInGameFog}" 
                  Content="{DynamicResource DisableFog}" Style="{DynamicResource SettingsCheckBoxStyle}"/>
    </Grid>
</framework:BindableWindow>
