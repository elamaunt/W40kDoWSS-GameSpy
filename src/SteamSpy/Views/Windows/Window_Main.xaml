<framework:BindableWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:framework="clr-namespace:Framework.WPF;assembly=Framework.WPF"
        xmlns:core="clr-namespace:ThunderHawk.Core;assembly=ThunderHawk.Core"
        xmlns:local="clr-namespace:ThunderHawk"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        mc:Ignorable="d"
        Title="ThunderHawk Soulstorm Launcher"
        MinHeight="700" 
        Height="700" 
        MinWidth="1180"
        Width="1180" 
        Style="{DynamicResource WindowStyle}">

    <StackPanel Margin="0, 0, 0, 0" Orientation="Vertical">
        <Border BorderThickness="0 0 0 0.5" BorderBrush="White" Height="50">
            <StackPanel Margin="5 0 0 0" Orientation="Horizontal" x:Name="TopBar" VerticalAlignment="Center">
                <Image Source="/Images/thunderhawk_full.jpg" Height="40"></Image>
                <StackPanel Margin="5 0 0 0" Name="Tabs"
                framework:WPFBinder.ItemPrefix="Tab"
                framework:WPFBinder.ItemStyle="Default"
                framework:WPFBinder.Frame="Pages"
                Orientation="Horizontal"/>
            </StackPanel>
        </Border>

        <ContentControl Margin="0 30 0 0" Name="Content"
                        framework:WPFBinder.Frame="Pages"/>

    </StackPanel>
</framework:BindableWindow>
